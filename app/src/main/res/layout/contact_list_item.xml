<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="35pt"
                    android:background="#499D55"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="12pt"
                    app:cardElevation="12pt">

                        <TextView
                            android:id="@+id/tv_nama_makanan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5pt"
                            android:layout_marginStart="5pt"
                            android:textSize="20sp"
                            tools:text="Nama Makanan" />

                        <TextView                            android:id="@+id/tv_deskripsi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20pt"
                            android:layout_marginStart="5pt"
                            android:textSize="15sp"
                            tools:text="Deskripsi Singkat" />

                        <ImageView
                            android:id="@+id/logolist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="100pt"
                            android:layout_marginTop="3pt"
                            android:layout_marginBottom="3pt"
                            tools:srcCompat="@tools:sample/avatars"
                            android:contentDescription="@string/todo" />

                </androidx.cardview.widget.CardView>
        </LinearLayout>

</LinearLayout>